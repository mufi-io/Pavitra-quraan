<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dp"
    android:background="@drawable/dialog_shape_3" >


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/overlay_text_color"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@string/menu_jump" />


   <TextView android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:text="@string/gotoPage" />

   <EditText android:id="@+id/page_number"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="number" />

   <TextView android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:text="@string/menu_jump" />

   <LinearLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
       <Spinner android:id="@+id/sura_spinner"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content" />

       <Spinner android:id="@+id/ayah_spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
   </LinearLayout>

</LinearLayout>
